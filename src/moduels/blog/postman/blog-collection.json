{
  "info": {
    "name": "Blog API Collection",
    "description": "Collection for Blog CRUD operations and section management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "blog_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "section_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Blogs",
      "item": [
        {
          "name": "Add New Blog",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "text",
                  "value": "This is a sample blog text",
                  "type": "text"
                },
                {
                  "key": "sections",
                  "value": "[{\"title\":\"Introduction\",\"content\":[\"Welcome to our blog\",\"This is the first section\"]},{\"title\":\"Main Content\",\"content\":[\"Here is the main content\",\"More details about the topic\"]}]",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/blog",
              "host": ["{{base_url}}"],
              "path": ["blog"]
            },
            "description": "Create a new blog post with image and sections"
          }
        },
        {
          "name": "Get All Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog",
              "host": ["{{base_url}}"],
              "path": ["blog"]
            },
            "description": "Retrieve all blogs"
          }
        },
        {
          "name": "Get Blog by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/{{blog_id}}",
              "host": ["{{base_url}}"],
              "path": ["blog", "{{blog_id}}"]
            },
            "description": "Get a specific blog by its ID"
          }
        },
        {
          "name": "Update Blog",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "text",
                  "value": "Updated blog text",
                  "type": "text"
                },
                {
                  "key": "sections",
                  "value": "[{\"title\":\"Updated Introduction\",\"content\":[\"Updated welcome message\",\"Updated first section\"]},{\"title\":\"Updated Main Content\",\"content\":[\"Updated main content\",\"Updated details\"]}]",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/blog/{{blog_id}}",
              "host": ["{{base_url}}"],
              "path": ["blog", "{{blog_id}}"]
            },
            "description": "Update an existing blog"
          }
        },
        {
          "name": "Delete Blog",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/blog/{{blog_id}}",
              "host": ["{{base_url}}"],
              "path": ["blog", "{{blog_id}}"]
            },
            "description": "Delete a blog by ID"
          }
        }
      ]
    },
    {
      "name": "Blog Sections",
      "item": [
        {
          "name": "Update Blog Section",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Section Title\",\n  \"content\": [\n    \"Updated content item 1\",\n    \"Updated content item 2\",\n    \"New content item 3\"\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/blog/{{blog_id}}/section/{{section_id}}",
              "host": ["{{base_url}}"],
              "path": ["blog", "{{blog_id}}", "section", "{{section_id}}"]
            },
            "description": "Update a specific section within a blog"
          }
        }
      ]
    }
  ]
}

